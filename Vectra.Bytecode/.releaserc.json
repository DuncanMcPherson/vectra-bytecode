{
  "branches": [
    "master"
  ],
  "tagFormat": "v${version}-bytecode",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "scope": "bytecode", "release": "patch" },
          { "scope": "bytecode", "type": "feat", "release": "minor" },
          { "scope": "bytecode", "type": "fix", "release": "patch" },
          { "scope": "bytecode", "type": "perf", "release": "patch" },
          { "scope": "bytecode", "type": "refactor", "release": "patch" },
          { "scope": "bytecode", "breaking": true, "release": "major" },
          { "scope": "*", "release": false },
          { "breaking": true, "scope": "*",
            "release": false
          }
        ]
      }
    ],
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "sed -i \"s|<Version>.*</Version>|<Version>${nextRelease.version}</Version>|\" Vectra.Bytecode.csproj"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "Vectra.Bytecode.csproj"
        ],
        "message": "chore: v${nextRelease.version}-bytecode [skip ci]"
      }
    ],
    [
      "@semantic-release/github",
      {
        "successComment": "Release v${nextRelease.version} deployed! May the Force be with us.\n\n${nextRelease.notes}",
        "failTitle": "Release failed for v${lastRelease.version}",
        "failComment":
        "⚠️ The automated release for v${lastRelease.version} has failed at the `${error.command}` step.\n\n> **Error Message**: ${error.message}\n\nPlease investigate the logs and retrigger the release once fixed."
      }
    ]
  ]
}