{
  "branches": ["master"],
  "tagFormat": "v${version}-bytecode",
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "sed -i \"s|<Version>.*</Version>|<Version>${nextRelease.version}</Version>|\" Vectra.Bytecode.csproj"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "Vectra.Bytecode.csproj",
          "CHANGELOG.md"
        ],
        "message": "chore: v${nextRelease.version}-bytecode [skip ci]"
      }
    ],
    "@semantic-release/github"
  ]
}